ostComment() {\n      axios.post('http://localhost:5000/comments', {\n        essay_id: this.$route.params.id,\n        user_email: this.user.email,\n        content: this.newCommentContent,\n        sentence: this.selectedLine\n      }).then(response => {\n        console.log(response.data);\n      }).catch(error => {\n        console.log(error);\n      }).finally(() => {\n        console.log(\"finally\");\n        this.loadComments();\n        this.$forceUpdate();\n      });\n    }\n  }\n};","map":{"version":3,"mappings":"AAgCA,OAAOA,KAAI,MAAO,OAAM;AACxB,SAASC,QAAO,QAAS,kBAAkB;AAG3C,eAAe;EACXC,KAAK,EAAED,QAAQ;EACfE,IAAI,EAAE,iBAAiB;EACvBC,IAAI,GAAG;IACH,OAAO;MACHC,KAAK,EAAE;QAAEC,KAAK,EAAE,EAAE;QAAEC,OAAO,EAAC,EAAE;QAAEC,UAAU,EAAC;MAAE,CAAC;MAC9CC,OAAO,EAAE,IAAI;MACbC,OAAO,EAAE,KAAK;MACdC,IAAI,EAAE,IAAI,CAACC,MAAM,CAACD,IAAI;MACtBE,eAAe,EAAE,IAAI,CAACD,MAAM,CAACC,eAAe;MAC5CC,OAAO,EAAE,KAAK;MACdC,UAAU,EAAE,CAAC,CAAC;MACdC,YAAY,EAAE,CAAC,CAAC;MAChBC,iBAAiB,EAAE,EAAE;MACrBC,QAAQ,EAAE,KAAK;MACfC,aAAa,EAAC,EAAE;MAChBC,eAAe,EAAC;IACpB;EACJ,CAAC;EACDC,OAAO,GAAG;IACN,IAAI,CAACC,SAAS,EAAC;EACnB,CAAC;EACDC,OAAO,EAAE;IACLD,SAAS,GAAG;MACR,IAAI,CAACb,OAAM,GAAI,IAAG;MAClBT,KAAI,CACCwB,GAAG,CAAC,8BAA6B,GAAI,IAAI,CAACC,MAAM,CAACC,MAAM,CAACC,EAAE,EAC1DC,IAAI,CAACC,QAAO,IAAK;QACdC,OAAO,CAACC,GAAG,CAACF,QAAQ,CAACzB,IAAI;QACzB,IAAI,CAACC,KAAI,GAAIwB,QAAQ,CAACzB,IAAG;MAC7B,CAAC,EACA4B,KAAK,CAACC,KAAI,IAAK;QACZH,OAAO,CAACC,GAAG,CAACE,KAAK;QACjB,IAAI,CAACvB,OAAM,GAAI,IAAG;MACtB,CAAC,EACAwB,OAAO,CAAC,MAAM;QACX,IAAI,CAACzB,OAAM,GAAI,KAAI;QACnB,IAAI,CAAC0B,YAAY,EAAC;QAClB,IAAI,CAACC,cAAc,EAAC;QACpB,IAAI,CAACC,YAAY,EAAC;MACtB,CAAC;IACT,CAAC;IACDD,cAAc,GAAG;MACb,IAAI,CAACtB,OAAM,GAAI,IAAI,CAACT,KAAK,CAACG,UAAS,KAAM,IAAI,CAACG,IAAI,CAAC2B,KAAI;MACvDR,OAAO,CAACC,GAAG,CAAC,IAAI,CAACjB,OAAO;IAC5B,CAAC;IACDqB,YAAY,GAAG;MACX,IAAI,CAACpB,UAAS,GAAI,IAAI,CAACV,KAAK,CAACE,OAAO,CAACgC,KAAK,CAAC,GAAG;MAC9CT,OAAO,CAACC,GAAG,CAAC,IAAI,CAAChB,UAAU;IAC/B,CAAC;IACD;IACA;IACA;IACA;IACAsB,YAAY,GAAG;MACX,IAAI,C